<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anara.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/login"
            android:parentActivityName=".StartActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.anara.myapplication.StartActivity" />
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/signup"
            android:parentActivityName=".StartActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.anara.myapplication.StartActivity" />
        </activity>
        <activity
            android:name=".uHomeActivity"
            android:label="@string/uHome"></activity>
        <activity
            android:name=".Search"
            android:label="Look for Group"
            android:parentActivityName=".uHomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.anara.myapplication.uHomeActivity" />
        </activity>
        <activity
            android:name=".CreatGroupActivity"
            android:label="@string/newGForm"
            android:parentActivityName=".uHomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.anara.myapplication.uHomeActivity" />
        </activity>
        <activity
            android:name=".GroupActivity"
            android:label="@string/group"
            android:parentActivityName=".uHomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.anara.myapplication.uHomeActivity" />
        </activity>
        <activity
            android:name=".ChatActivity"
            android:label="@string/chat"
            android:parentActivityName=".GroupActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.anara.myapplication.GroupActivity" />
        </activity>
    </application>

</manifest>
